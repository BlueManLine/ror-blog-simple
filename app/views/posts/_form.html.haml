= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation.alert.alert-danger
      %h2
        Errors:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :post
    %br/
    = f.text_area :post
  .actions
    = f.submit