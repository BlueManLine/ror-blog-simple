%h1 Listing posts
%table.table.table-striped
  %thead
    %tr
      %th #
      %th Title
      %th Content
      %th.date_ceil Added at
      %th{:style => "width:180px;"} Options
  %tbody
    - @posts.each do |post|
      %tr
        %td
          %span.badge{"data-toggle" => "tooltip", "data-placement" => "left", "title" => "#{post.user.present? ? "#"+post.user.id.to_s+" "+post.user.email : ''}"}
            = post.id
        %td= truncate(post.title, :length => 25)
        %td= truncate(post.post, :length => 100)
        %td= post.created_at
        %td
          %div.btn-group
            = link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-success'
            = link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'

%br/

= link_to 'New Post', new_admin_post_path, :class => "btn btn-lg btn-primary"