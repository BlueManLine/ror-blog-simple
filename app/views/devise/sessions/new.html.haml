= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => "form", :style => "width:300px;"}) do |f|
  %h2.form-signin-heading Please sign in
  = f.email_field :email, :autofocus => true, :placeholder => "Email address", :class => "form-control"
  = f.password_field :password, :placeholder => "Password", :class => "form-control"

  - if devise_mapping.rememberable?
    %label.checkbox
    %input{name: "remember_me", type: "checkbox", value: "remember-me"}/
    Remember me

  = f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block"

%br
= render "devise/shared/links"
